<h1> Produtos / Categorias </h1>
<br />
<td><a class="btn btn-outline-secondary" href="/Cardapio/Foda">Voltar</a></td>
<td><a class="btn btn-primary" href="/Categoria/Create">Novo ProdutoEmpresa</a></td>
<td><a class="btn btn-outline-dark" href="/Produto/Index?idEmpresa=">Produtos</a></td>
<td><a class="btn btn-outline-info" href="/Categoria/Index?idEmpresa=">Categorias</a></td>


<div id="divtabela">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">EmpresaID</th>
                <th scope="col">CategoriaID</th>
                <th scope="col">Nome da Categoria</th>
                <th scope="col">ProdutoID</th>
                <th scope="col">Nome Produto</th>
                <th scope="col">Categoria do Produto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @ViewBag.listaProdutosEmpresa)
            {
                <tr>
                    <td>@item.EmpresaID</td>
                    <td>@item.CategoriaID</td>
                    <td>@item.Nome</td>
                    <td>@item.ProID</td>
                    <td>@item.NomeProduto</td>
                    <td>@item.CategoriaProduto</td>
                   @* <td><a class="btn btn-outline-warning" href="/Categoria/Atualizar/@item.CategoriaID">Editar</a></td>*@
                    <td><a class="btn btn-outline-danger" href="/ProdutoEmpresa/Apagar/@item.ProID">Deletar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
