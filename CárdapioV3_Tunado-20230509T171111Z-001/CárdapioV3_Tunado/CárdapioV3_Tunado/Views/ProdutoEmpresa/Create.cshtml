<h1>Novo Produto da Empresa</h1>

<form method="post" action="create">

    <div class="form-group">
        <label for="ProdutoID">Id do Produto</label>
        <input type="text" class="form-control" id="ProdutoID" name="ProdutoID" required placeholder="Digite o ID do Produto">

    </div>

    <div class="form-group">
        <label for="CategoriaID">Id da Categoria</label>
        <input type="text" class="form-control" id="CategoriaID" name="CategoriaID" required placeholder="Digite o ID da Categoria">

    </div>

    <br />
    <a class="btn btn-secondary" href="/ProdutoEmpresa/Index">Voltar</a>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
