@using CárdapioV3_Tunado.Models.enums
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CárdapioV3_Tunado</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CárdapioV3_Tunado.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>


</head>
<body>
    <div class="container">
        @if (User.Identity!.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark">
                <div class="container-fluid">

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon text-white">Menu</span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cardapio" asp-action="Index">Cardápio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Empresa/Index?idEmpresa=">Empresa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-controller="Produto" asp-action="Index">Produtos</a>
                            </li>

                            @if (User.IsInRole(nameof(E_Perfil.MASTER)))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Categoria" asp-action="Index">Categorias</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>

                            <li class="nav-item">
                                <form method="post" asp-controller="Empresa" asp-action="Logout">
                                    <a class="nav-link" href="#" onclick="document.forms[0].submit()">Logout</a>
                                </form>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>


        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)



    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>



    <script>
        $(document).ready(function () {
            $('#telefone').mask('+99(99)99999-9999');
            $('#cnpj').mask('99.999.999/9999-99');
        });
    </script>

</body>
</html>
