<!DOCTYPE html>
<html>
@model CárdapioV3_Tunado.DAL.EmpresaDAO
@{
    CárdapioV3_Tunado.DAL.EmpresaDAO empresa = new CárdapioV3_Tunado.DAL.EmpresaDAO();
}
<head>
	<meta charset="UTF-8" />
	<title>PerfilEmpresa</title>


	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,400;0,500;0,700;1,400&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<script src="~/js/JavaScript.js"></script>
	<link rel="stylesheet" href="~/css/telaEmpresa.css">
</head>

<body>
	<div class="header">

		<h1>Perfil Empresa</h1>
		@foreach (var item in ViewBag.listadeEmpresas)
		{
			<img class="avatar" src="@item.FotoEmpresa" alt="Avatar">
		}


		<div>
			<br />
			<h2>
				@foreach (var item in ViewBag.listadeEmpresas)
				{
					@item.NomeEmpresa
				}
			</h2>
		</div>
		<br />

	</div>

	<div class="about">
		<form method="post" asp-controller="Empresa" asp-action="Logout">
			<br />
			<button class="btn btn-info" href="/Empresa/Logout" Nova>Logout</button>
		</form>
		<br />
		<input type="text" value="@String.Join("", new string[] { Context.Request.IsHttps ? "https://" : "http://", Context.Request.Host.Value})/cardapio/index?idempresa=@int.Parse(User.Identity!.Name)" id="myInput">

		<button onclick="myFunction()">Copiar</button>

		<form method="post">
			<div class="form-group" style="text-align: left; position: relative;">
				<label for="formGroupExampleInput">Nome</label>
				<div class="input-with-button">
					@foreach (var item in ViewBag.listadeEmpresas)
					{
						<input type="text" value="@item.NomeEmpresa" class="form-control" id="formGroupExampleInput" readonly>
					}


				</div>
			</div>
			<div class="form-group" style="text-align: left; position: relative;">
				<label for="formGroupExampleInput2">Telefone</label>
				<div class="input-with-button">
					@foreach (var item in ViewBag.listadeEmpresas)
					{
						<input type="text" value="@item.Telefone" class="form-control" id="formGroupExampleInput2" readonly>
					}
					

				</div>
			</div>
			<div class="form-group" style="text-align: left; position: relative;">
				<label for="formGroupExampleInput">CNPJ</label>
				<div class="input-with-button">
					@foreach (var item in ViewBag.listadeEmpresas)
					{
						<input type="text" value="@item.CNPJ" class="form-control" id="formGroupExampleInput" readonly>
					}
					

				</div>
			</div>
			<div class="form-group" style="text-align: left; position: relative;">
				<label for="formGroupExampleInput2">Senha</label>
				<div class="input-with-button">
					@foreach (var item in ViewBag.listadeEmpresas)
					{
						<input type="password" value="@empresa.Descriptografar(item.SenhaEmpresa)" class="form-control" id="formGroupExampleInput2" readonly>
					}
					

				</div>
			</div>

			<div class="form-group" style="text-align: left; position: relative;">
				<label for="formGroupExampleInput2">Foto Empresa</label>
				<div class="input-with-button">
					@foreach (var item in ViewBag.listadeEmpresas)
					{
						<input type="text" value="@item.FotoEmpresa" class="form-control" id="formGroupExampleInput2" readonly>
					}
					

				</div>
			</div>

			<div class="form-group" style="text-align: left; position: relative;">
				<label for="formGroupExampleInput2">Taxa Empresa</label>
				<div class="input-with-button">
					@foreach (var item in ViewBag.listadeEmpresas)
					{
						<input type="text" value="@item.taxaEmpresa" class="form-control" id="formGroupExampleInput2" readonly>
					}


				</div>
			</div>

			
		</form>
		<a type="button" class="btn btn-primary edit-button" style="margin-left: 715px; margin-top: -550px;" href="/Empresa/Atualizar">Editar</a>
		<a type="button" class="btn btn-primary edit-button" style="margin-left: 790px; margin-top: -550px;" href="/Cardapio/Index">Cardapio</a>
		<a type="button" class="btn btn-primary edit-button" style="margin-left: 610px; margin-top: -550px;" href="/Produto/Index">Produtos</a>


	</div>

</body>
</html>