
<html lang="en">
@model CárdapioV3_Tunado.DAL.EmpresaDAO
@{
    CárdapioV3_Tunado.DAL.EmpresaDAO empresa = new CárdapioV3_Tunado.DAL.EmpresaDAO();
}
<head>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,400;0,500;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/telaEmpresa.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>

</head>

<body>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>



    <div class="header">

        <h1>Perfil Empresa</h1>

        @foreach (var item in ViewBag.EmpresaAtualizar)
        {
            <img class="avatar" src="@item.FotoEmpresa" alt="Avatar">
        }


        <div>
            <br />
            <h2>
                @foreach (var item in ViewBag.EmpresaAtualizar)
                {
                    @item.NomeEmpresa
                }
            </h2>
        </div>
        <br />

    </div>

    <div class="about">
        <form method="post" action="Atualizar" enctype="multipart/form-data">
            <div class="form-group" style="text-align: left; position: relative;">
                <label for="formGroupExampleInput">Nome</label>
                <div class="input-with-button">
                    @foreach (var item in ViewBag.EmpresaAtualizar)
                    {
                        <input type="text" name="NomeEmpresa" value="@item.NomeEmpresa" class="form-control" id="formGroupExampleInput">
                    }

                </div>
            </div>
            <div class="form-group" style="text-align: left; position: relative;">
                <label for="formGroupExampleInput2">Telefone</label>
                <div class="input-with-button">
                    @foreach (var item in ViewBag.EmpresaAtualizar)
					{
						<input type="text" name="Telefone" value="@item.Telefone" class="form-control" id="telefone">
					}

                </div>
            </div>
            <div class="form-group" style="text-align: left; position: relative;">
                <label for="formGroupExampleInput">CNPJ</label>
                <div class="input-with-button">
                    @foreach (var item in ViewBag.EmpresaAtualizar)
                    {
                        <input type="text" name="CNPJ" value="@item.CNPJ" class="form-control" id="formGroupExampleInput" maxlength="14">
                    }



                </div>
            </div>
            <div class="form-group" style="text-align: left; position: relative;">
                <label for="formGroupExampleInput2">Senha</label>
                <div class="input-with-button">
                    @foreach (var item in ViewBag.EmpresaAtualizar)
                    {
                        <input type="password" name="SenhaEmpresa" value="@empresa.Descriptografar(item.SenhaEmpresa)" class="form-control" id="formGroupExampleInput2" >
                    }

                </div>
            </div>
            <br />
 



   

            <div class="form-group" style="text-align: left; position: relative;">

                <input type="file" class="custom-file-input" id="customFile">
                <label style="margin-top: -70px;" for="formGroupExampleInput2">Foto Empresa</label>
                @foreach (var item in ViewBag.EmpresaAtualizar)
                {
                    <input type="file" name="FotoEmpresa" value="@item.FotoEmpresa" class="form-control" id="formGroupExampleInput">
                }
               
              
            </div>
     
    
           <div class="form-group" style="text-align: left; position: relative;">
    <label for="formGroupExampleInput2">TaxaEmpresa</label>
    <div class="input-with-button">
        @foreach (var item in ViewBag.EmpresaAtualizar)
        {
            <input type="text" name="taxaEmpresa" value="@item.taxaEmpresa.ToString("0.00")" class="form-control" id="formGroupExampleInput2">
        }
    </div>
</div>





            <button type="submit" class="btn btn-primary" style="margin-left: 900px; margin-top: 0px;">Salvar</button>
            <a class="btn btn-secondary" style="margin-left: 710px; margin-top: -36px;" href="/Empresa/Index">Voltar</a>
        </form>
    </div>


    <script>
        $(document).ready(function () {
            $('#telefone').mask('+99(99)9999-9999?9');
        });
    </script>

</body>




</html>