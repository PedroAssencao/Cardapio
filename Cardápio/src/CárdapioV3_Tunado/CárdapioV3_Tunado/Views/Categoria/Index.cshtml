<h1> Categorias </h1>
<br />
<td><a class="btn btn-outline-secondary" href="/Cardapio/Index">Voltar ao Cardápio</a></td>
<td><a class="btn btn-primary" href="/Categoria/Create">Nova Categoria</a></td>
<td><a class="btn btn-primary" href="/Produto/Index">Produtos</a></td>
<td><a class="btn btn-outline-info" href="/Empresa/Index?idEmpresa=">Empresa</a></td>

<form method="post" asp-controller="Empresa" asp-action="Logout">
    <br />
    <button style="position: absolute; right: 100px; top: 50;" class="btn btn-info" href="/Empresa/Logout" Nova>Logout</button>
</form>


<div id="divtabela">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">CategoriaID</th>
                <th scope="col">Nome da Categoria</th>
                <th scope="col">Descrição</th>
                <th scope="col">Link da Foto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.listaCategorias)
            {
                <tr>
                    <td>@item.CategoriaID</td>
                    <td>@item.Nome</td>
                    <td>@item.CategoriaDescricao</td>
                    <td>@item.CategoriaFoto</td>
                    <td><a class="btn btn-outline-warning" href="/Categoria/Atualizar/@item.CategoriaID">Editar</a></td>
                    <td><a class="btn btn-outline-danger" href="/Categoria/Apagar/@item.CategoriaID">Deletar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
