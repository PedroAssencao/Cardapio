<h1> Empresas </h1>
<br />
<td><a class="btn btn-outline-secondary" href="/Cardapio/Foda">Voltar para o Cardapio</a></td>
<td><a class="btn btn-primary" href="/Empresa/Create">Nova</a></td>
<script src="~/js/javascript.js"></script>
<form method="post" asp-controller="Empresa" asp-action="Logout">
    <br />
    <button class="btn btn-info" href="/Empresa/Logout" Nova>Logout</button>
</form>
<input type="text" value="https://localhost:44313/cardapio/foda?idempresa=@int.Parse(User.Identity!.Name)" id="myInput">

<button onclick="myFunction()">Copiar</button>




<div id="divtabela">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">EmpresaID</th>
                <th scope="col">Nome da Empresa</th>
                <th scope="col">Telefone da Empresa</th>
                <th scope="col">Taxa de Entrega</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.listaEmpresas)
            {
                <tr>
                    <td>@item.EmpresaID</td>
                    <td>@item.NomeEmpresa</td>
                    <td>@item.Telefone</td>
                    <td>@item.taxaEmpresa</td>
                    <td><a class="btn btn-outline-warning" href="/Empresa/cu?idEmpresa=@item.EmpresaID">Taxa</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
