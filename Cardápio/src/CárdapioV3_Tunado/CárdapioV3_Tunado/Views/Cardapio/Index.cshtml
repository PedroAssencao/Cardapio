                if (currentIndex > index) {
                    var newId = currentIndex - 1;
                    element.closest(".ScroolBAr").attr("id", "produto-" + newId);
                    element.attr("onclick", "event.preventDefault(); removerItemDoCarrinho(" + newId + ");");
